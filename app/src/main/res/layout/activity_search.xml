<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="beer.happy_hour.drinking.SearchActivity"
    android:background="@color/colorPrimary">

    <SearchView
        android:id="@+id/search_view"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:paddingEnd="8dp"
        android:paddingRight="8dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:layout_weight="1"
            android:gravity="left"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_snack_sack"
            android:onClick="searchSnackCategory"/>


        <Button
            android:layout_weight="1"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_movie_soda_clipart_free_clipart_images"
            android:onClick="searchSodaCategory" />

        <Button
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_antu_drink_beer_svg"
            android:onClick="searchAlcoholCategory" />

        <Button
            android:layout_weight="1"
            android:layout_gravity="right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_cigarette_box"
            android:onClick="searchCigaretteCategory" />

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_shopping_cart"
            android:onClick="viewShoppingCart" />

    </LinearLayout>

    <ListView
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:id="@+id/items_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

</LinearLayout>
