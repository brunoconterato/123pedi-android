<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_confirmation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    tools:context="beer.happy_hour.drinking.activity.BriefActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="Obrigado! Seu pedido foi recebido e será enviado em instantes."
        android:textSize="20sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_ghost_button"
        android:textSize="20sp"
        android:layout_margin="8dp"
        android:onClick="goToFeedBackActivity"
        android:text="Deixar sugestão, reclamação, elogio ou comentário" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_ghost_button"
        android:textSize="20sp"
        android:layout_margin="8dp"
        android:onClick="returnToMainActivity"
        android:text="Retornar ao início" />

</LinearLayout>
