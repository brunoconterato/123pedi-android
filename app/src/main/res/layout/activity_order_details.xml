<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="beer.happy_hour.drinking.activity.OrderDetailsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Informações de Contato"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/phone_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telefone"
            android:inputType="number" />

        <EditText
            android:id="@+id/email_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/goToMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="goToMapActivity"
            android:text="Clique para indicar local de entrega" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="Informações de Entrega"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/adress_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/citystate_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/country_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/complement_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Complemento (nº, qd, lt etc)"
            android:inputType="textPostalAddress" />

        <Button
            android:id="@+id/get_location_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Obter Localização" />

        <Button
            android:id="@+id/finalize_order_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="goToPaymentActivity"
            android:text="Prosseguir para Pagamento" />


    </LinearLayout>


</ScrollView>
